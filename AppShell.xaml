<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TableShot.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TableShot"
    Shell.FlyoutBehavior="Flyout"
    Title="TableShot">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate local:SignInPage}"
        Route="SignInPage" />
    <ShellContent
        Title="Sign Up"
        Route="SignUpPage"
        ContentTemplate="{DataTemplate local:SignUpPage}" />
    <ShellContent
        Title="Edit Table"
        Route="TableEditPage"
        ContentTemplate="{DataTemplate local:TableEditPage}" />

        <ShellContent
      Route="TableViewPage"
      ContentTemplate="{DataTemplate local:TableViewPage}" />




    <ShellContent Title="Confirm Sign Up"
                Route="ConfirmSignUpPage"
                ContentTemplate="{DataTemplate local:ConfirmSignUpPage}" />

</Shell>
