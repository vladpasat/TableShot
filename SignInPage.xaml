<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableShot.SignInPage"
             Title="Sign In">
  <VerticalStackLayout Padding="30" Spacing="15">
    <Label Text="Sign In" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

    <Entry x:Name="UsernameEntry" Placeholder="Username" Keyboard="Email" />

    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

    <Button Text="Sign In" Clicked="OnSignInClicked" />
  </VerticalStackLayout>
</ContentPage>