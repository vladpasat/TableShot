<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             x:Class="TableShot.MainPage">


        <VerticalStackLayout
                   Padding="30,0"
        Spacing="25"
        HorizontalOptions="Center"
        VerticalOptions="Center">
            <Button x:Name="ButtonAddTable" Text="Add Table" IsVisible="False" Clicked="ButtonAddTable_Clicked"/>
            <Button x:Name="ButtonViewTable" Text="View Table" IsVisible="True" Clicked="ButtonViewTable_Clicked"/>
            <Button
                x:Name="ButtonEditTable"
                Text="Edit Table"
                IsVisible="False"
                Clicked="ButtonEditTable_Clicked" />

        </VerticalStackLayout>


</ContentPage>
